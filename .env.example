# gbHam Environment Configuration
# Copy this file to .env and adjust the values

# REQUIRED: Secure admin token (generate with: openssl rand -base64 32)
ADMIN_TOKEN=your-secure-admin-token-here

# Operator information (shown in privacy notice and imprint)
OPERATOR_NAME=Max Mustermann
OPERATOR_EMAIL=admin@example.com
OPERATOR_CALLSIGN=OE8XBB
OPERATOR_ADDRESS=Musterstraße 1, 12345 Musterstadt
OPERATOR_COUNTRY=Österreich

# Net/Round configuration
NET_NAME=DobRATSCH Runde
NET_TYPE=FM

# Cloudflare (set to "true" if using Cloudflare CDN/Proxy)
USE_CLOUDFLARE=false

# Pagination (entries per page)
ENTRIES_PER_PAGE=15

# Rate limiting
ENTRY_COOLDOWN=60
RATE_LIMIT_REQUESTS=5
RATE_LIMIT_WINDOW=60

# Port mapping (external port)
HTTP_PORT=3005
